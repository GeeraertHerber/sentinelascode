{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationRuleName": {
            "type": "string",
            "defaultValue": "New Automation Rule hopehully",
            "metadata": {
                "description": "The name of the automation rule that will be deployed"
            }
        },
        "workspace":{
            "type":"string",
            "defaultValue": "sentineltestenv"
        }
    },
    "variables": {
        "automationRuleGuid": "[uniqueString(parameters('automationRuleName'))]" 
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/automationRules",
            "name": "[concat(parameters('workspace'), '/Microsoft.OperationalInsights/18827d6f-ace1-4baa-9a37-489da9b3c76a",
            "apiVersion": "2021-09-01-preview",
            "properties": {
                "actions": [
                    {
                        "order": 2,
                        "actionType": "ModifyProperties",
                        "actionConfiguration": {
                            "status": "Closed",
                            "classification": "Undetermined"
                        }
                    }
                ],
                "displayName": "Sample Automation rule",
                "order": 2,
                "triggeringLogic": {
                    
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentSeverity",
                                "operator": "Equals",
                                "propertyValues": [
                                    "High"
                                ]
                            }
                        }
                    ],
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created"
                }
               
            }
        }
    ],
    "outputs": {}
}