{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationRuleName": {
            "type": "string",
            "defaultValue": "New Automation Rule hopefully",
            "metadata": {
                "description": "The name of the automation rule that will be deployed"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
          }
    },
    "variables": {
        "automationRuleGuid": "[uniqueString(parameters('automationRuleName'))]" 
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/automationRules",
            "name": "[variables('automationRuleGuid')]",
            "location": "[parameters('location')]",
            "apiVersion": "2021-09-01-preview",
            "properties": {
                "displayName": "[parameters('automationRuleName')]",
                "order": 2,
                "triggeringLogic": {
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentSeverity",
                                "operator": "Equals",
                                "propertyValues": [
                                    "High"
                                ]
                            }
                        }
                    ]
                },
                "actions": [
                    {
                        "order": 2,
                        "actionType": "ModifyProperties",
                        "actionConfiguration": {
                            "status": "Closed",
                            "classification": "Undetermined"
                        }
                    },
                    {
                        "order": 3, 
                        "actionType": "ModifyProperties", 
                        "actionConfiguration": {
                            "labels": [
                                {
                                    "labelName": "tag"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}